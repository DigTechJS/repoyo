<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="surveysRowModel" type="com.repoyo.app.modules.surveys.data.model.SurveysRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowprofileimglarg"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <ImageView android:id="@+id/imageProfileImgLarg"
            android:layout_height="@dimen/_50pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_width="@dimen/_50pxh"
            android:scaleType="centerCrop" circular="@{true}"
            imageRes="@{@drawable/img_profileimglarg}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_profileimglarg"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnfriendsgroup"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_weight="0.87" android:layout_width="0dp" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearRowfriendsgroup"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtFriendsGroup"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.66"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{surveysRowModel.txtFriendsGroup}"
                    style="@style/txtGilroysemibold18_1" tools:text="@string/lbl_friends_group"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTime"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginStart="@dimen/_152pxh"
                    android:layout_weight="0.34"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{surveysRowModel.txtTime}"
                    style="@style/txtGilroyregular14_1" tools:text="@string/lbl_09_05_pm"/>
            </LinearLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRowlandonmosbyh"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_9pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtLandonMosbyH"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="@dimen/_1pxh"
                    android:singleLine="true"
                    android:text="@{surveysRowModel.txtLandonMosbyH}"
                    style="@style/txtGilroyregular14_1" tools:text="@string/msg_landon_mosby_h"/>
                <ImageView android:id="@+id/imageVectorOne"
                    android:layout_height="@dimen/_10pxh"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="@dimen/_173pxh"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_width="@dimen/_13pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_vector_bluegray_400"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_vector_bluegray_400"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
